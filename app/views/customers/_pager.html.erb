<nav>
	<ul class="pager">
		<li class="previous <%= page == 0 ? 'disabled' : '' %>">
			<% if page > 0 %>
				<%= link_to "&larr; Previous".html_safe,
				customers_path(keywords: keywords, page: page - 1) %>
			<% end %>
		</li>
		<li class="next <%= @customers.count < 10 ? 'disabled' : '' %>">
			<% if @customers.count == 10 %>
				<%= link_to "Next &rarr;".html_safe,
				customers_path(keywords: keywords, page: page + 1) %>
			<% end %>
		</li>
	</ul>
</nav>